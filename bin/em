#!/bin/sh

# https://gist.github.com/railwaycat/4043945#comment-1456680

t=()

while IFS= read -r file; do
  [ ! -f "$file" ] && t+=("$file") && /usr/bin/touch "$file"
done <<<"$(printf '%s\n' "$@")"

$(/usr/bin/open -a /Applications/Emacs.app "$@") &

